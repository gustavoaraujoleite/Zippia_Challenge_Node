<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/jobs.css">

</head>

<body>
    <%- include('../includes/header.ejs') %>

    <main>
        <div class="buttons_container">
            <select name="company" class="select">
                <option value="" disabled selected hidden>-- Select Company --</option>
                <% for (let job of jobs) { %>
                <option value=<%job.companyName%>><%= job.companyName %></option>
                <% } %>

            </select>

            <button class="filter__button">Filter jobs - last 7 days</button>
        </div>

        <% if (jobs.length > 0) { %>
        <div class="grid">
            <% for (let job of jobs) { %>
            <article class="card">
                <header class="card__header">
                    <span class="job__title">
                        <%= job.jobTitle %>
                    </span>
                </header>

                <div class="card__content">
                    <span class="company__name"><%= job.companyName %></span>

                    <p class="job__description">
                        <%= job.jobDescription %>
                    </p>
                </div>

            </article>
            <% } %>
        </div>
        <% } else { %>
        <h1>No Products Found!</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>